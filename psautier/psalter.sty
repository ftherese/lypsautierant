\newcommand\bv[1][]{\def\tmp{#1}\@bv}
\newcommand\@bv[2][\z@]{%
\typeout{[[\tmp]][[#1]][[#2]]}%
  \ifx\tmp\@empty
   \textbf{#2}%
  \else
  \setbox0\hbox{\tmp#2}%
  \setbox2\hbox{\tmp\textbf{#2}}%
  \tmp\kern\dimexpr(\wd0-\wd2)/2-#1\relax\textbf{#2}%
  \fi}


\def\kernfix#1#2{%
  \setbox0\hbox{#1\kern\z@#2}%
  \setbox2\hbox{#1#2}%
  \kern\dimexpr\wd2-\wd0\relax}

